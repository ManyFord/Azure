<Window x:Class="wpfloginscreen.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="319" Width="300" FontSize="14" Background="White">
    <Border Background="White" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="Black"/>
            <TextBox Name="txtUsername" Background="#FFE2E8F1" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="Black"/>
            <PasswordBox Name="txtPassword" Background="#FFE6EBF1" Foreground="White" FontSize="18"/>
            <Button Name="btnEntrar" Click="btnSubmit_Click" Content="Entrar" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
